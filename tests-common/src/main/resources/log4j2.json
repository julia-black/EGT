{
  "configuration": {
    "properties": {
      "property": {
        "name": "pattern",
        "value": "[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1}\t-\t%msg%n"
      }
    },
    "ThresholdFilter": {
      "level": "all"
    },
    "appenders": {
      "Console": {
        "name": "StdOut",
        "PatternLayout": {
          "pattern": "${pattern}"
        }
      },
      "File": {
        "name": "fileALL",
        "fileName": "logs/EGT-all.log",
        "PatternLayout": {
          "pattern": "${pattern}"
        }
      },
      "loggers": {
        "root": {
          "level": "all",
          "AppenderRef": [
            {
              "ref": "StdOut"
            },
            {
              "ref": "fileALL"
            }
          ]
        }
      }
    }
  }
}